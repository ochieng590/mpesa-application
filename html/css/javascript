    <script>
        document.getElementById('payment-form').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const phone = document.getElementById('phone').value;
            const amount = document.getElementById('amount').value;
            const account = document.getElementById('account').value;
            
            // Simulate API call to M-Pesa
            simulateMpesaPayment(phone, amount, account);
        });
        
        function simulateMpesaPayment(phone, amount, account) {
            // Show loading state
            const button = document.querySelector('button');
            const originalText = button.innerHTML;
            button.innerHTML = 'Processing... <i class="fas fa-spinner fa-spin"></i>';
            button.disabled = true;
            
            // Simulate API delay
            setTimeout(() => {
                // Show success response
                const response = document.getElementById('response');
                const responseText = document.getElementById('response-text');
                
                response.style.display = 'block';
                responseText.textContent = `Payment request of KSh ${amount} sent to ${phone}. Please check your phone to complete the transaction.`;
                
                // Reset button
                button.innerHTML = originalText;
                button.disabled = false;
                
                // Clear form
                document.getElementById('payment-form').reset();
                
                // Add to transaction history (in a real app, this would come from the backend)
                addTransactionToHistory(phone, amount, account);
            }, 2000);
        }
        
        function addTransactionToHistory(phone, amount, account) {
            const historySection = document.querySelector('.history-section');
            const transaction = document.createElement('div');
            transaction.className = 'transaction';
            
            const formattedAmount = 'KSh ' + Number(amount).toLocaleString();
            const now = new Date();
            const options = { day: 'numeric', month: 'short', year: 'numeric', hour: '2-digit', minute: '2-digit' };
            const dateString = now.toLocaleDateString('en-US', options);
            
            transaction.innerHTML = `
                <div class="transaction-header">
                    <span class="amount">${formattedAmount}</span>
                    <span class="status pending">Pending</span>
                </div>
                <div class="phone">${phone}</div>
                <div class="date">${dateString}</div>
            `;
            
            historySection.insertBefore(transaction, historySection.childNodes[2]);
        }
    </script>
